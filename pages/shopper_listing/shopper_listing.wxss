.background {
    color: white;
    text-align: center;
    height: 100vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: center;
    justify-content: center;
    position:absolute;
    overflow-y: scroll;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  
  .cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 16px;
    margin: 5px;
  }

  .card {
    border-radius: 1px;
    border: 1px solid green;
    border-radius: 5px;
  }

  .picture {
    width: 23vh;
    height: 20vh;
    background-size: cover;
  }

