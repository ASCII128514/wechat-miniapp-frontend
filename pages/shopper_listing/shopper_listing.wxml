<!--pages/shopper_listing/shopper_listing.wxml-->
<view class="background" style="background-image: linear-gradient(-200deg, rgba(0,90,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../../Img/landing.png');">
  <view class="container"> 
      <view class="newButton"><text>Fresh from the farm</text></view> 
      <scroll-view class="cards">
          <block wx:for="{{products}}" 
          wx:for-item="product">
            <view class="card">
              <image class="picture" src="{{product.picture_url}}"></image>
                <view class="product-info">
                  <view class="product-name">{{product.product_name}}</view>
                  <view class="product-price">{{product.product_price}}</view>
                </view>
            </view>  
          </block> 
      </scroll-view>
    </view> 
</view>

