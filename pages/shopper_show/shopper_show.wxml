<view class="background" style="background-image: linear-gradient(-200deg, rgba(0,90,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../../Img/landing.png');">
 <view class="container">
 
    <view class="toCart">
      <button>Go to my cart</button>
    </view>

  
    <view class="title">{{product.product_name}}</view>
    <view class="price">{{product.product_price}}</view>
    <image class="picture" src="{{product.picture_url}}"></image>
    <view class="product_info">
      <view class="Farmer"> Farmer
        <view>{{product.product_farmer}}</view>
      </view>
      <view class="description"> Description
        <view>{{product.product_description}}</view>
      </view>
    
    </view>
  
  
  
  
  </view>



</view>
