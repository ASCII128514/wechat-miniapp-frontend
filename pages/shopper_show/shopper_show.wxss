/* pages/shopper_show/shopper_show.wxss */
.background {
    color: white;
    height: 100vh;
    width: 100%;
    /* if you have a 70px navbar => height: calc(100vh - 70px); */
    background-size: cover !important;
    display: flex;
    align-items: flex-start;
    justify-content: center;
  }

  .product_info {
    margin: 5px;
    /* display: flex; */
  }

  .measurement-area {
    margin: 5px;
    display: flex;
    justify-content: around;
  }

  .button-area {
    margin: 5px;
    display: flex;
    justify-content: around;
  }

  .product-picture {
    background-size: cover !important;
    background-position: center;
    border-radius: 40rpx;
  }

.title {
  color: #7c7676; font-size:30rpx;
}

.teaser {
  color: #070606; font-size:35rpx; font-weight:light;
}

.cart-button {
  border-top-left-radius: 100rpx;
  border-bottom-left-radius: 100rpx;
  box-shadow:0 4px 4px rgba(255, 105, 105, 0.3), 0 0 40px rgba(255, 105, 105, 0.4) inset;
}

.buy-button {
  border-top-right-radius: 100rpx;
  border-bottom-right-radius: 100rpx;
  box-shadow:0 4px 4px rgba(255, 105, 105, 0.3), 0 0 40px rgba(255, 105, 105, 0.4) inset;
}